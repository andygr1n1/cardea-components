{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "jsx": "react-jsx",
        "sourceMap": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "emitDeclarationOnly": true
    },
    "include": ["src/**/*", "rollup.config.ts", "index.d.ts"],
    "exclude": ["./node_modules"]
}
